<div class="card col-sm-12 col-md-6 cols-lg-4 mt-5 mx-auto">
    <img src="{{product.cover}}" class="detailImg" alt="{{product.name}}">
    <div class="card-body">
      <h5 class="card-title">{{product.name}}</h5>
      <p class="card-text">{{product.description}}</p>
      <h5 class="card-title">Comentarios de los usuarios:</h5>
      <a class="btn btn-primary m-1" href="/products/{{product._id}}/comments">Deja un comentario</a>
    {{#each product.comments}}
        <p class="card-text comment mt-5">{{this}}</p>
        <hr>
    {{/each}}
    </div>
  </div>


