 <div>
    
    <h4>Editar mi perfil</h4>
     
    <form action="/profile/{{userDetails._id}}/edit" method="POST">
    <label for="username">Nombre:</label>
    <input type="text" name="username" value="{{userDetails.username}}">
    <br>
    <label for="email">Correo Electrónico:</label>
    <input type="text" name="email" value="{{userDetails.email}}">
    <br>
    <label for="password">Contraseña:</label>
    <input type="password" name="password" value="{{userDetails.password}}">
    <br>
    <p style="color: blue">{{errorMessage}}</p>

    <button>Editar</button>

    </form>

</div>